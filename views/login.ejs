<!doctype html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Login</title>
  </head>
  <body>
    <h1>Login</h1>
    <% if(error) { %>
      <h3><%=error%></h3>
      <% } %>
    <form action='/login' method='POST'>
      <input type='text' name='email' placeholder='email'>
      <input type='text' name='password' placeholder='password'>
      <button>Login</button>
    </form>
    <form action='/' method='GET'>
      <button>Return Home</button>
    </form>
  </body>
</html>
